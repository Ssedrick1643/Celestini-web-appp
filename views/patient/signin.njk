{% extends 'common/layer.njk' %}

{% block content %}
  <h1 class="mdc-typography--display1">Sign In </h1>

  <form action="patients/viewp" id="signIn-form">
    <div>
      <div class="mdc-form-field">
        <div class="mdc-textfield" data-mdc-auto-init="MDCTextfield">
          <input id="firstname" type="text" required="required" class="mdc-textfield__input">
          <label for="firstname" class="mdc-textfield__label">
            Username
          </label>
        </div>
      </div>

      <div class="mdc-form-field">
        <div class="mdc-textfield" data-mdc-auto-init="MDCTextfield">
          <input id="password" type="password" required="required" class="mdc-textfield__input">
          <label for="password" class="mdc-textfield__label">
            Password
          </label>
        </div>
      </div>
    </div>

    <button type="submit"
            class="mdc-button
                   mdc-button--raised
                   mdc-button--primary
                   mdc-ripple-surface"
            data-mdc-auto-init="MDCRipple">
      SignIn
    </button>
  </form>

  <!-- The p element below is where we'll eventually output our signIn -->
  <p class="mdc-typography--headline" id="signIn"></p>
</main>
<script src="/Dist/material-components-web.min.js"></script>
<script>window.mdc.autoInit();</script>
{% endblock %}